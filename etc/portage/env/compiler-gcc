# GCC fallback for packages that can't be built with Clang.
COMMON_FLAGS="-O2 -pipe -march=x86-64 -mtune=generic"
CFLAGS="${COMMON_FLAGS}"
CPPFLAGS=""
CXXFLAGS="${COMMON_FLAGS}"
LDFLAGS="-Wl,-O2 -Wl,--as-needed -Wl,-z,relro,-z,now -Wl,-z,pack-relative-relocs"

CC="gcc"
CXX="g++"
CPP="gcc -E"
AR="ar"
AS="as"
NM="nm"
RANLIB="ranlib"
STRIP="strip"
OBJCOPY="objcopy"
STRINGS="strings"
OBJDUMP="objdump"
READELF="readelf"
ADDR2LINE="addr2line"
