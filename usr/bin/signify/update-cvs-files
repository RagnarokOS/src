set -e

: ${CVSWEB_URL:='http://cvsweb.openbsd.org/cgi-bin/cvsweb'}
CVSWEB_URL="${CVSWEB_URL}/~checkout~"

while read -r cvs_path ; do
	filename=${cvs_path##*/}
	if [[ -z ${filename} ]] ; then
		continue
	fi
	echo "[32;1m*[0;0m[1;1m ${filename}[0;0m ($cvs_path)"
	curl -\# -o "${filename}" "${CVSWEB_URL}/${cvs_path}"
done

