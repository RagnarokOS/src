.br
\fI/usr/local/lib/sysctl.d/*.conf\fP
.br
\fI/usr/lib/sysctl.d/*.conf\fP
.br
\fI/lib/sysctl.d/*.conf\fP
.br
\fI/etc/sysctl.conf\fP
